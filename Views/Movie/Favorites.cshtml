@model List<MovieFinder.Models.Movie>

<div class="container">
    <h2 class="text-center mb-4">Your Favorite Movies</h2>

    @if (Model.Count > 0)
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                        <div class="card-body text-center">
                            <h5 class="card-title">@movie.Title (@movie.Year)</h5>
                            <form asp-action="RemoveFavorite" method="post">
                                <input type="hidden" name="TmdbId" value="@movie.TmdbId">
                                <button type="submit" class="btn btn-danger btn-sm w-100">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-center text-muted">No favorite movies yet.</p>
    }
</div>


