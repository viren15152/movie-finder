@model List<MovieFinder.Models.Movie>

<div class="container">
    <h2>Your Favorite Movies</h2>
    @if (Model.Count == 0)
    {
        <p>No favorite movies saved.</p>
    }
    else
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-3">
                    <div class="card">
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title (@movie.Year)</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

