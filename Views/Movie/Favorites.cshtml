@model List<Movie>

<div class="container">
    <h2 class="mb-4">‚≠ê Favorite Movies</h2>

    @if (Model.Count > 0)
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title (@movie.Year)</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No favorite movies saved yet.</p>
    }
</div>
